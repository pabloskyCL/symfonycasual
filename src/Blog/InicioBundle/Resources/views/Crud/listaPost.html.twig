{% extends "BlogInicioBundle:Templates:template.html.twig" %}

{% block title 'Listado de post' %}

{% block navbar %}
    <div class="row">
    </div>
{% endblock %}

{% block contenido %}

    <table>
        <tr>
            <th>id</th>
            <th>titulo</th>
            <th>tema</th>
            <th>votos</th>
        </tr>
    {% for li in listadoPost %}
        <tr>
            <td>{{ li.id }}</td>
            <td>{{ li.titulo }}</td>
            <td>{{ li.tema }}</td>
            <td>{{ li.votos }}</td>
            <td><a href="{{ path('eliminar', { 'nro_post': li.nro_post }) }}">Eliminar post</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
